{% extends ajax ? "minsalacademicaAnBundle::plantilla.html_ajax.twig" :
'base.html.twig' %}

{% block body -%}
    <h1>Estudiante</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Carnet</th>
                <td>{{ entity.carnet }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ entity.nombres }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ entity.apellidos }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('estudiante') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('estudiante_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
